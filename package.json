{
    "name": "koa2-base",
    "version": "2.0.4",
    "description": "基于koa2搭建的一套完整架构",
    "scripts": {
        "clean": "rimraf node_modules",
        "start": "better-npm-run dev",
        "prod": "better-npm-run prod",
        "pstart": "concurrently \"npm run start\" \"npm run open\"",
        "open": "opn \"http://localhost:7000\"",
        "koa": "node ./bin/run",
        "pm2": "better-npm-run pm2",
        "tree:dir": "treee -l 2 --ignore node_modules/,.git/"
    },
    "betterScripts": {
        "dev": {
            "command": "nodemon  --config ./common/configs/nodemon.json",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "server:default"
            }
        },
        "prod": {
            "command": "nodemon  --config ./common/configs/nodemon.json",
            "env": {
                "NODE_ENV": "production"
            }
        },
        "koa": "./node_modules/.bin/runkoa bin/www",
        "pm2": "pm2 start ./common/configs/pm2/pm2.json",
        "test": "./node_modules/.bin/mocha --reporter spec server/test/*.js -u bdd"
    },
    "dependencies": {
        "babel-core": "^6.18.2",
        "babel-preset-es2015": "^6.18.0",
        "bluebird": "^3.4.6",
        "cacheman-mongo": "^1.0.3",
        "debug": "^2.6.3",
        "ejs": "^2.5.6",
        "epipebomb": "^1.0.0",
        "escape-string-regexp": "^1.0.5",
        "io-helper": "^0.0.7",
        "koa": "^2.0.0",
        "koa-better-body": "^3.0.2",
        "koa-bodyparser": "^2.0.1",
        "koa-compress": "^1.0.9",
        "koa-conditional-get": "^1.0.3",
        "koa-convert": "^1.2.0",
        "koa-etag": "^2.1.1",
        "koa-favicon": "^1.2.1",
        "koa-generic-session": "^1.11.5",
        "koa-json": "^1.1.1",
        "koa-log4": "^1.1.0",
        "koa-logger": "^1.3.0",
        "koa-respond": "^1.0.1",
        "koa-router": "^7.0.0",
        "koa-send": "^3.2.0",
        "koa-session-mongoose": "^1.0.0",
        "koa-socket": "^4.4.0",
        "koa-socketio-cookie-helper": "^1.1.1",
        "koa-static-cache": "^3.1.7",
        "koa-views": "^5.0.1",
        "lodash": "^4.17.2",
        "moment-helper": "^0.0.1",
        "mongo-model-statics": "^0.0.2",
        "nodemon": "^1.9.1",
        "pug": "^2.0.0-beta6",
        "q": "^1.4.1",
        "require-helper": "^0.0.5",
        "runkoa": "^1.5.9",
        "spawn-helper": "^0.0.2",
        "stdout": "^0.0.3",
        "superagent": "^3.3.1",
        "superagent-promise": "^1.1.0"
    },
    "devDependencies": {
        "better-npm-run": "0.0.14",
        "concurrently": "^3.1.0",
        "lite-server": "^2.2.2",
        "mocha": "^2.4.5",
        "opn-cli": "^3.1.0",
        "rimraf": "^2.5.4",
        "supertest": "^1.2.0",
        "tree-cli": "^0.4.12"
    },
    "main": "app.js",
    "repository": "git@github.com:githbq/hbq-koa2-base.git",
    "author": "hubiqing",
    "license": "MIT"
}
