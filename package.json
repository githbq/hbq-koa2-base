{
    "name": "koa2-base",
    "version": "3.0.3",
    "scripts": {
        "start:build": "npm run tsc && node build",
        "clean": "rimraf node_modules",
        "clear": "rimraf build",
        "start": "better-npm-run dev",
        "prod": "better-npm-run prod",
        "pstart": "concurrently \"npm run start\" \"npm run open\"",
        "open": "opn \"http://localhost:3604\"",
        "koa": "node run",
        "tree:dir": "treee -l 2 --ignore node_modules/,.git/",
        "tsc": "npm run clear && tsc",
        "tsc:w": "npm run clear && tsc -w",
        "test": "mocha src/**/*.test.ts",
        "pm2": "npm run tsc && pm2 start ./src/common/configs/pm2/pm2.json",
        "pm2:dev": "npm run tsc && pm2 start ./src/common/configs/pm2/pm2-dev.json",
        "lint": "tslint \"src/**/*.ts\" "
    },
    "betterScripts": {
        "dev": {
            "command": "nodemon  --config ./src/common/configs/nodemon.json",
            "env": {
                "CONFIG_MODE": "dev",
                "NODE_ENV": "development",
                "DEBUG": "server:default"
            }
        },
        "prod": {
            "command": "npm run tsc && nodemon  --config ./src/common/configs/nodemon.json",
            "env": {
                "IS_LOGIN": false,
                "NODE_ENV": "production"
            }
        }
    },
    "dependencies": {
        "bluebird": "^3.5.0",
        "cacheman-mongo2": "^0.0.9",
        "cli-color": "^1.2.0",
        "debug": "^2.6.3",
        "ejs": "^2.5.6",
        "epipebomb": "^1.0.0",
        "fs-extra-promise": "^1.0.1",
        "ftp-helper": "^0.0.11",
        "image-size": "^0.5.4",
        "io-helper": "^3.0.6",
        "koa": "^2.2.0",
        "koa-body": "^2.0.1",
        "koa-cas": "^0.0.3",
        "koa-compress": "^2.0.0",
        "koa-conditional-get": "^2.0.0",
        "koa-etag": "^3.0.0",
        "koa-favicon": "^2.0.0",
        "koa-json": "^2.0.2",
        "koa-log4": "1.1.0",
        "koa-respond": "^1.0.1",
        "koa-rewrite": "^2.1.0",
        "koa-router": "7.0.0",
        "koa-send": "^4.1.0",
        "koa-session-minimal": "^3.0.4",
        "koa-session-mongoose": "^1.0.0",
        "koa-socket": "^4.4.0",
        "koa-socketio-cookie-helper": "^1.1.1",
        "koa-static-cache": "^5.0.1",
        "koa-views": "^6.0.2",
        "koa2-history-api-fallback": "^0.0.5",
        "lodash": "^4.17.4",
        "moment-helper": "^0.0.1",
        "mongo-model-statics": "^1.0.6",
        "mongoose": "^4.10.2",
        "node-schedule": "^1.2.3",
        "nodemon": "^1.11.0",
        "open": "^0.0.5",
        "pug": "^2.0.0-rc.1",
        "require-helper": "^0.0.18",
        "rimraf": "^2.6.1",
        "superagent": "^3.5.2",
        "superagent-promise": "^1.1.0",
        "transliteration": "^1.6.2"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.3",
        "@types/bluebird-global": "^3.5.2",
        "@types/cli-color": "^0.3.29",
        "@types/fs-extra-promise": "^1.0.1",
        "@types/koa": "^2.0.39",
        "@types/lodash": "^4.14.64",
        "@types/mocha": "^2.2.41",
        "@types/node": "^7.0.16",
        "@types/should": "^8.3.0",
        "better-npm-run": "0.0.14",
        "chai": "^3.5.0",
        "concurrently": "^3.1.0",
        "mocha": "^3.3.0",
        "opn-cli": "^3.1.0",
        "should": "11.2.1",
        "supertest": "^1.2.0",
        "tree-cli": "^0.4.12",
        "ts-node": "^3.0.3",
        "tslib": "^1.6.1",
        "tslint": "^5.2.0",
        "typescript": "^2.3.2"
    },
    "keywords": [
        "typescript",
        "koa2",
        "restful",
        "mocha",
        "chai"
    ],
    "engines": {
        "node": ">=7.6"
    },
    "repository": "https://github.com/githbq/hbq-koa2-base.git",
    "author": "hubiqing",
    "license": "MIT"
}
