{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "noEmit": false,
        "noEmitHelpers": true,
        "importHelpers": true,
        "strictNullChecks": false,
        "lib": ["es6"],
        "typeRoots": ["node_modules/@types"],
        "types": [
            "node",
            "mocha",
            "should",
            "lodash"
        ],
        "outDir": "./build",
        "rootDir": "./src"
    },
    "exclude": [
        "node_modules",
        "build",
        "**/*.test.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}