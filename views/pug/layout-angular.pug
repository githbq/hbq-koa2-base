doctype html
html(ng-app="app" ng-cloak ng-strict-di)
  head
    title #{title}
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no")
    blockbeforeStyles   
    link(rel="stylesheet" type="text/css" href="@/libs/angular-material/angular-material.min.css")
    block afterStyles 
  body
    div(ng-controller="mainController as rootVm")
    block content  
    block beforeScripts 
    script(src="@/libs/angular/angular.min.js")
    script(src="@/libs/angular-animate/angular-animate.min.js")
    script(src="@/libs/angular-aria/angular-aria.min.js")
    script(src="@/libs/angular-material/angular-material.min.js")
    script(src="@/pages/layout-angular.js")
    block afterScripts